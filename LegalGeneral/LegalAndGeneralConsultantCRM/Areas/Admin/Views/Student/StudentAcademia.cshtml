@section Scripts {
    <script>
        $(document).ready(function () {
          var table =  $('#studentTable').DataTable({
                "ajax": {
                    "url": "/Admin/Student/StudentData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "fullName", "autoWidth": true },
                     { "data": "email", "autoWidth": true },
                    { "data": "phoneNumber", "autoWidth": true },
                    { "data": "universityName", "autoWidth": true },
                    { "data": "courseName", "autoWidth": true },
                    { "data": "employeeFullName", "autoWidth": true },
                    {
                        "data": "statuses",

                        "autoWidth": true,
                        "render": function (data, type, row) {
                            if (data === "Approval") {
                                return '<span class="badge badge-pill bg-success"> Approval</span>';
                            } else if (data === "Reject") {
                                return '<span class="badge badge-pill bg-danger">Rejected</span>';
                            } else if (data === "Cold Lead") {
                                return '<span class="badge badge-pill bg-dark">Cold Lead</span>';
                            } else if (data === "Future Lead") {
                                return '<span class="badge badge-pill bg-secondary">Future Lead</span>';
                            } else if (data === "Hot Lead") {
                                return '<span class="badge badge-pill bg-primary">Hot Lead</span>';
                            } else if (data === "Warm Lead") {
                                return '<span class="badge badge-pill bg-info">Warm Lead</span>';
                            } else {
                                return '<span class="badge badge-pill bg-warning">Pending</span>';
                            }
                        }
                    },
                    { "data": "messages", "autoWidth": true },
                    
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return '<a href="/Admin/Student/Detail/' + row.studentId + '" class="btn btn-primary btn-sm"><i class="fas fa-info-circle"></i> Details</a>';
                        },
                        "autoWidth": true
                    }
                ]
            });

            // Filter by First Name
            $('#firstNameFilter').on('keyup', function () {
                table.column(0).search(this.value).draw();
            });
            // Filter by Source
            $('#sourceFilter').on('keyup', function () {
                table.column(1).search(this.value).draw();
            });

            // Filter by Phone Number
            $('#phoneFilter').on('keyup', function () {
                table.column(2).search(this.value).draw();
            });
            // Filter by Email
            $('#emailFilter').on('keyup', function () {
                table.column(3).search(this.value).draw();
            });
            // Filter by Source
            $('#BranchFilter').on('keyup', function () {
                table.column(4).search(this.value).draw();
            });
            // Filter by Source
            $('#eduFilter').on('keyup', function () {
                table.column(5).search(this.value).draw();
            });
            // Filter by Source
            $('#intake1Filter').on('keyup', function () {
                table.column(6).search(this.value).draw();
            });
            $('#intake2Filter').on('keyup', function () {
                table.column(7).search(this.value).draw();
            });
            $('#intake3Filter').on('keyup', function () {
                table.column(8).search(this.value).draw();
            });

            $('.dataTables_length').hide(); // Hide the 'Show entries' dropdown

            $('#exportBtn').click(function () {
                var tableData = [];
                var headers = [];

                // Extract first 8 headers
                $('#studentTable thead tr th').each(function (index) {
                    if (index < 8) {
                        headers.push($(this).text().trim());
                    }
                });

                tableData.push(headers);

                // Extract data from each row (first 8 columns)
                $('#studentTable tbody tr').each(function () {
                    var rowData = [];
                    $(this).find('td').each(function (index) {
                        if (index < 8) {
                            rowData.push($(this).text().trim());
                        }
                    });
                    tableData.push(rowData);
                });

                // Create worksheet and download
                var ws = XLSX.utils.aoa_to_sheet(tableData);
                var wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "studentTable");

                // Export to file
                XLSX.writeFile(wb, "studentTable.xlsx");
            });


        });
    </script>
}

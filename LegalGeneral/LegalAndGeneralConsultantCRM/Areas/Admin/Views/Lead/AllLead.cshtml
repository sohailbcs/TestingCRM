@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#brandTable').DataTable({
                "ajax": {
                    "url": "/Admin/Lead/GetAllLeadData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return '<input type="checkbox" class="rowCheckbox" value="' + row.leadId + '" />';
                        }
                    },
                    {
                        "data": "firstName",
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "lastName",
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "gender",
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "phoneNumber",
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "email",
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "leadSource",
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "universityName", // New Column
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "domainName", // New Column
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "interestedprogram",
                        "autoWidth": true,
                        "render": function (data) {
                            return data ? data : 'Not set';
                        }
                    },
                    {
                        "data": "createdDate",
                        "autoWidth": true,
                    },
                    {
                        "data": "isLeadAssign",
                        "autoWidth": true,
                        "render": function (data, type, row) {
                            return data ? 'Allocated' : 'UnAllocated';
                        }
                    },

                    {
                        "data": null,
                        "render": function (data, type, row) {
                            var editButton = '<a href="#" class="btn btn-primary open-modal me-3" ' +
                                'data-leadid="' + row.leadId + '" ' +
                                'data-firstname="' + row.firstName + '" ' +
                                'data-lastname="' + (row.lastName || '') + '" ' +
                                'data-phonenumber="' + row.phoneNumber + '" ' +
                                'data-email="' + (row.email || '') + '" ' +
                                'data-address="' + (row.address || '') + '" ' +
                                'data-gender="' + (row.gender || '') + '" ' +
                                'data-leadsource="' + (row.leadSource || '') + '" ' +
                                'style="padding: 12px;margin-right: 5px;">' +
                                '<i class="bi bi-pencil" style="margin-right: 5px;"></i></a>';

                            var deleteButton = '<a href="#" class="btn btn-danger delete-lead" ' +
                                'data-leadid="' + row.leadId + '" ' +
                                'data-firstname="' + row.firstName + '" ' +
                                'style="padding: 12px;">' +
                                '<i class="bi bi-trash" style="margin-right: 3px;"></i></a>';
                            var historyButton = '<a href="/Admin/Lead/LeadDetail?leadId=' + row.leadId + '" class="btn btn-info" ' +
                                'style="padding: 12px;">' +
                                '<i class="bi bi-clock" style="margin-right: 3px;"></i></a>';

                            return editButton + deleteButton + historyButton;
                        }
                    }
                ],
                // ... rest of your DataTable configuration
            });
            $('#designSelected').click(function () {
                const selectedIds = $('.rowCheckbox:checked').map(function () {
                    return $(this).val();
                }).get();

                if (selectedIds.length === 0) {
                    alert('Please select at least one lead to design.');
                    return;
                }

                if (confirm('Are you sure you want to design the selected leads?')) {
                    $.ajax({
                        url: '/Admin/Lead/DesignLead',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(selectedIds),  // Send the array directly
                        success: function (response) {
                            alert(response.message || 'Leads designed successfully.');
                            table.ajax.reload();  // Reload the DataTable to reflect changes
                        },
                        error: function (xhr, status, error) {
                            console.error('Error:', xhr.responseText);
                            alert('An error occurred while trying to design leads: ' + xhr.responseText);
                        }
                    });
                }
            });

            // Function to update the checked leads counter
            function updateCheckedLeadsCounter() {
                const checkedCount = $('.rowCheckbox:checked').length;
                $('#checkedLeadsCounter').text('Checked Leads: ' + checkedCount);
            }

            // Event listener for checkbox clicks (row checkboxes)
            $('#brandTable').on('change', '.rowCheckbox', function () {
                updateCheckedLeadsCounter(); // Update the counter whenever a checkbox is checked/unchecked
            });

            // Event listener for "Select All" checkbox
            $('#selectAll').click(function () {
                const isChecked = this.checked;
                $('.rowCheckbox').prop('checked', isChecked); // Check/uncheck all row checkboxes
                updateCheckedLeadsCounter(); // Update the counter after selecting all
            });
            // Custom Date Range Filter
            $.fn.dataTable.ext.search.push(
                function (settings, data, dataIndex) {
                    var startDate = $('#startDateFilter').val();  // Get start date
                    var endDate = $('#endDateFilter').val();      // Get end date
                    var createdDate = data[10];                   // Column index for "Created Date"

                    // Convert dates to ISO format for comparison
                    if (startDate) {
                        startDate = new Date(startDate).toISOString().split('T')[0];
                    }
                    if (endDate) {
                        endDate = new Date(endDate).toISOString().split('T')[0];
                    }

                    // Check if created date falls within the range
                    if ((startDate && createdDate < startDate) || (endDate && createdDate > endDate)) {
                        return false;
                    }
                    return true;
                }
            );

            // Redraw table when date inputs change
            $('#startDateFilter, #endDateFilter').on('change', function () {
                table.draw();
            });
            // Hide the 'Show entries' dropdown
            $('.dataTables_length').hide();
            $('#deleteSelected').click(function () {
                const selectedIds = $('.rowCheckbox:checked').map(function () {
                    return $(this).val();
                }).get();

                if (selectedIds.length === 0) {
                    alert('Please select at least one lead to delete.');
                    return;
                }

                if (confirm('Are you sure you want to delete the selected leads?')) {
                    $.ajax({
                        url: '/Admin/Lead/DeleteLeads',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ leadIds: selectedIds }),
                        success: function (response) {
                            alert(response.message || 'Leads deleted successfully.');
                            table.ajax.reload(); // Reload the DataTable to reflect changes
                        },
                        error: function (xhr, status, error) {
                            // Log error details for debugging
                            console.error('Error:', xhr.responseText);
                            alert('An error occurred while trying to delete leads: ' + xhr.responseText);
                        }
                    });
                }
            });
            // Filter by First Name
            $('#firstNameFilter').on('keyup', function () {
                table.column(1).search(this.value).draw();
            });
            $('#lastNameFilter').on('change', function () {
                table.column(2).search(this.value).draw();
            });


            // Filter by Gender
            $('#genderFilter').on('change', function () {
                table.column(3).search(this.value).draw();
            });

            // Filter by Email
            $('#emailFilter').on('keyup', function () {
                table.column(5).search(this.value).draw();
            });

            // Filter by Phone Number
            $('#phoneFilter').on('keyup', function () {
                table.column(4).search(this.value).draw();
            });

            // Filter by Source
            $('#sourceFilter').on('keyup', function () {
                table.column(6).search(this.value).draw();
            });

            // Filter by Date Range (Exact or Partial Match)
            $('#dateRangeFilter').on('keyup', function () {
                table.column(5).search(this.value).draw();
            });
            $('#assignStatus').on('change', function () {
                table.column(11).search(this.value).draw();
            });
            $('#selectAll').click(function () {
                const isChecked = this.checked;
                $('.rowCheckbox').prop('checked', isChecked);
            });
        });
    </script>


}

<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="container-full">

        
        <!-- Main content -->
        <section class="content">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="d-flex align-items-center">
                    <div class="w-p100 d-md-flex align-items-center justify-content-between">
                        <h3 class="page-title">   </h3>
                        <div class="d-inline-block align-items-center">
                            <nav>
                                <ol class="breadcrumb">
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">

                <div class="col-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">@Model.University.Name</h3>
                            <h4 class="university-name" hidden>@Model.University.UniversityId</h4>
                            <div class="float-right">

                                
                            </div>
                        </div>



                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="table-responsive">
                                <table id="courseTable" class="display expandable-table" style="width:100%">
                                    <thead>
                                        <tr style="height:40px">
                                            <th style="background-color: #4e0973;color:white;">Course Name</th>
                                            <th style="background-color: #4e0973;color:white;">Duration</th>
                                            <th style="background-color: #4e0973;color:white;">Tuition Fee</th>
                                            <th style="background-color: #4e0973;color:white;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var course in Model.UniversityCourses)
                                        {
                                            <tr data-course-id="@course.CourseId">
                                                <td class="course-name">@course.Name</td>
                                                <td class="course-duration">@course.DurationInYears</td>
                                                <td class="course-fee">@course.TuitionFee</td>
                                                <td>
                                                    <a href="#" class="btn btn-primary edit-btn" style="padding:12px">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a href="#" class="btn btn-danger delete-btn" style="padding:12px" data-course-id="@course.CourseId">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>

        </section>

    </div>
</div>





@section Scripts {

    <script>
        $(document).ready(function () {
            $('#brandTable').DataTable({
                "ajax": {
                    "url": "/Admin/University/GetCourses",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "name", "autoWidth": true },

                    { "data": "durationInYears", "autoWidth": true },
                    { "data": "decription", "autoWidth": true },

                    {
                        "data": null,
                        "render": function (data, type, row) {
                            var editButton = '<button type="button" class="btn btn-primary edit-btn me-2" ' +
                                'data-id="' + row.courseId + '" ' +
                                'data-name="' + (row.name || '') + '" ' +
                                'data-duration="' + (row.durationInYears || '') + '" ' +
                                'data-description="' + (row.decription || '') + '" ' +
                                'style="padding: 12px; margin-right: 5px;">' +
                                '<i class="bi bi-pencil" style="margin-right: 5px;"></i>  ' +
                                '</button>';

                            var deleteButton = '<button type="button" class="btn btn-danger delete-btn" ' +
                                'data-id="' + row.courseId + '" ' +
                                'style="padding: 12px; margin-right: 5px;">' +
                                '<i class="bi bi-trash" style="margin-right: 5px;"></i>  ' +
                                '</button>';

                            return editButton + deleteButton;
                        }
                    }






                ]
            });
            $('.dataTables_length').hide(); // Hide the 'Show entries' dropdown

            $('#brandTable').on('click', '.edit-btn', function () {
                var courseId = $(this).data('id');
                var courseName = $(this).data('name');
              
                var duration = $(this).data('duration');
                var description = $(this).data('description');

                // Populate modal fields
                $('#courseId').val(courseId);
                $('#editCourseName').val(courseName);
                
                $('#editCourseDuration').val(duration);
                $('#editCourseDescription').val(description);

                // Show the modal
                $('#editCourseModal').modal('show');
            });

            // Submit edited course data
            $('#updateCourseButton').on('click', function () {
                var courseId = $('#courseId').val();
                var courseName = $('#editCourseName').val();
                 var duration = $('#editCourseDuration').val();
                var description = $('#editCourseDescription').val();

                var data = {
                    CourseId: courseId,
                    Name: courseName,
                    DurationInYears: duration,
                    Decription: description
                };

                $.ajax({
                    url: '/Admin/University/EditCourse', // Replace with your action method URL
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        console.log('Server response:', response);

                        if (response.success) {
                            $('#editCourseModal').modal('hide');
                            alert(response.message);
                            $('#brandTable').DataTable().ajax.reload();
                        } else {
                            alert('Failed to update course: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error updating course:', error);
                    }
                });
            });

            // Handle delete course action
            $('#brandTable').on('click', '.delete-btn', function () {
                var courseId = $(this).data('id');

                if (confirm('Are you sure you want to delete this course?')) {
                    $.ajax({
                        url: '/Admin/University/DeleteCourse', // Replace with your action method URL
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ courseId: courseId }),
                        success: function (response) {
                            console.log('Server response:', response);

                            if (response.success) {
                                alert(response.message);
                                $('#brandTable').DataTable().ajax.reload();
                            } else {
                                alert('Failed to delete course: ' + response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error('Error deleting course:', error);
                        }
                    });
                }
            });
        
        });
    </script>
}

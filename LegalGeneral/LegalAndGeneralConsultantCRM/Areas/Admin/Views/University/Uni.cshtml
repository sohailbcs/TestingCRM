<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>University Curriculum</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- Include Toastr CSS and JS, jQuery, FontAwesome, and SheetJS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script> <!-- Add this for SheetJS -->
    <style>
        #universityTable thead th::before,
        #universityTable thead th::after {
            content: "";
            right: 0;
            bottom: 0;
        }

    </style>
</head>
<body>

    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="container-full">

            @if (TempData["SuccessMessage"] != null)
            {
                <script>
                    // Display the success message as a popup alert
                    $(document).ready(function () {
                        alert('@TempData["SuccessMessage"]');
                    });
                </script>
            }
            <!-- Main content -->
            <section class="content">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="d-flex align-items-center">
                        <div class="w-p100 d-md-flex align-items-center justify-content-between">
                            <h3 class="page-title">   </h3>
                            <div class="d-inline-block align-items-center">
                                <nav>
                                    <ol class="breadcrumb">
                                    </ol>
                                </nav>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">

                    <div class="col-12">
                        <div class="box">
                            <div class="box-header with-border">
                                <h3 class="box-title">Educational Institutions and Their Academic Offerings</h3>
                                <div class="float-right">

                                    <div class="mb-3 d-flex justify-content-end">
                                        <a class="btn float-end  btn-primary" href="/Admin/University/UniversityCourses"><i class="bi bi-plus-circle"></i>&nbsp;Add University Courses </a>

                                    </div>
                                    <!-- Add Export Button -->
                                    <div class="mb-3 d-flex justify-content-end">
                                        <button id="exportBtn" class="btn btn-success">
                                            <i class="fa fa-download"></i> Export to Excel
                                        </button>
                                    </div>
                                </div>
                            </div>



                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Search Filters</h5>
                                    </div>
                                    <div class="card-body">
                                    <form id="filterForm">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="firstNameFilter">University Name</label>
                                                    <input type="text" class="form-control" id="firstNameFilter" placeholder="University Name" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sourceFilter">Domain Name</label>
                                                    <input type="text" class="form-control" id="sourceFilter" placeholder="Domain Name" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="phoneFilter">Offered Courses</label>
                                                    <input type="text" class="form-control" id="phoneFilter" placeholder="Offered Courses" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="emailFilter">Fees</label>
                                                    <input type="text" class="form-control" id="emailFilter" placeholder="Fees" />
                                                </div>
                                            </div>


                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sourceFilter">English</label>
                                                    <input type="text" class="form-control" id="BranchFilter" placeholder="English" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sourceFilter">Eaducation</label>
                                                    <input type="text" class="form-control" id="eduFilter" placeholder="Eaducation" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sourceFilter">Intake 1</label>
                                                    <input type="text" class="form-control" id="intake1Filter" placeholder="Intake 1" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sourceFilter">Intake 2</label>
                                                    <input type="text" class="form-control" id="intake2Filter" placeholder="Intake 2" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sourceFilter">Intake 3</label>
                                                    <input type="text" class="form-control" id="intake3Filter" placeholder="Intake 3" />
                                                </div>
                                            </div>



                                        </div>

                                    </form>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table id="universityTable" class="display expandable-table" style="width:100%">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th style="background-color: #4e0973;color:white;">University Name</th>
                                                <th style="background-color: #4e0973;color:white;">Domain Name</th>

                                                <th style="background-color: #4e0973;color:white;">Offered Courses</th>
                                                <th style="background-color: #4e0973;color:white;">Fees</th>
                                                <th style="background-color: #4e0973;color:white;">English</th>
                                                <th style="background-color: #4e0973;color:white;">Eaducation</th>

                                                <th style="background-color: #4e0973;color:white;">Intake 1</th>
                                                <th style="background-color: #4e0973;color:white;">Intake 2</th>
                                                <th style="background-color: #4e0973;color:white;">Intake 3</th>
                                                <th style="background-color: #4e0973;color:white;">Action</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                </div>

            </section>

        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="universityDetailModal" tabindex="-1" role="dialog" aria-labelledby="universityDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="universityDetailModalLabel">University Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="universityDetails">
                        <p><strong>University Name:</strong> <span id="universityName"></span></p>
                        <p><strong>Courses:</strong></p>
                        <ul id="courseList"></ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
               var table = $('#universityTable').DataTable({
                    "ajax": {
                        "url": "/Admin/University/GetAllUniversityData",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "name", "autoWidth": true }, // University Name
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                var domainNames = '';
                                data.forEach(function (course) {
                                    if (course.domainName) {
                                        domainNames = course.domainName; // Assuming all courses belong to the same domain
                                    }
                                });
                                return domainNames;
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                var courses = '<ul>';
                                data.forEach(function (course) {
                                    courses += '<li>' + course.courseName + '</li>';
                                });
                                courses += '</ul>';
                                return courses;
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                return data[0].tuitionFee ? data[0].tuitionFee + ' ' + data[0].currency : ''; // Show Tuition Fee and Currency
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                return data[0].englishProfiency ? data[0].englishProfiency : ''; // Show English Proficiency
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                return data[0].eaducationRequired ? data[0].eaducationRequired : ''; // Show Minimum Education Required
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                var intake1 = '';
                                data.forEach(function (course) {
                                    if (course.intake1) {
                                        intake1 = course.intake1; // Assuming all courses have the same intake value
                                    }
                                });
                                return intake1;
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                var intake2 = '';
                                data.forEach(function (course) {
                                    if (course.intake2) {
                                        intake2 = course.intake2; // Assuming all courses have the same intake value
                                    }
                                });
                                return intake2;
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                var intake3 = '';
                                data.forEach(function (course) {
                                    if (course.intake3) {
                                        intake3 = course.intake3; // Assuming all courses have the same intake value
                                    }
                                });
                                return intake3;
                            }
                        },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                var buttons = '';
                                data.forEach(function (course) {
                                    var deleteButton = '<button type="button" class="btn btn-danger delete-btn mt-2" style="padding: 10px;" data-id="' + course.universityCourseId + '"><i class="bi bi-trash" style="margin-right: 0;"></i> </button>';
                                    var detailButton = '<button type="button" class="btn btn-info detail-btn mt-2" style="padding: 10px;" data-id="' + row.universityId + '"><i class="bi bi-info-circle" style="margin-right: 0;"></i> </button>';
                                    buttons += deleteButton + " " + detailButton + "<br/>";
                                });
                                return buttons;
                            }
                        }
                    ]
                });

                // Filter by First Name
                $('#firstNameFilter').on('keyup', function () {
                    table.column(0).search(this.value).draw();
                });
                // Filter by Source
                $('#sourceFilter').on('keyup', function () {
                    table.column(1).search(this.value).draw();
                });

                // Filter by Phone Number
                $('#phoneFilter').on('keyup', function () {
                    table.column(2).search(this.value).draw();
                });
                // Filter by Email
                $('#emailFilter').on('keyup', function () {
                    table.column(3).search(this.value).draw();
                });
                // Filter by Source
                $('#BranchFilter').on('keyup', function () {
                    table.column(4).search(this.value).draw();
                });
                // Filter by Source
                $('#eduFilter').on('keyup', function () {
                    table.column(5).search(this.value).draw();
                });
                // Filter by Source
                $('#intake1Filter').on('keyup', function () {
                    table.column(6).search(this.value).draw();
                });
                $('#intake2Filter').on('keyup', function () {
                    table.column(7).search(this.value).draw();
                });
                $('#intake3Filter').on('keyup', function () {
                    table.column(8).search(this.value).draw();
                });

                $('.dataTables_length').hide(); // Hide the 'Show entries' dropdown

                $('#universityTable').on('click', '.delete-btn', function () {
                    var universityCourseId = $(this).data('id');
                    if (confirm('Are you sure you want to delete this university course?')) {
                        $.ajax({
                            url: '/Admin/University/DeleteUniversityCourse',
                            type: 'POST',
                            data: { universityCourseId: universityCourseId },
                            success: function (result) {
                                alert(result.message);
                                $('#universityTable').DataTable().ajax.reload(); // Reload the DataTable
                            },
                            error: function (err) {
                                alert('Error deleting university course');
                            }
                        });
                    }
                });

                $('#universityTable').on('click', '.detail-btn', function () {
                    var universityId = $(this).data('id');
                    window.location.href = '/Admin/University/Unidetail?universityId=' + universityId;
                });
            });

            // Export table to Excel (first 8 columns)
            $('#exportBtn').click(function () {
             
                // Extract first 8 columns
                $('#universityTable thead tr th').each(function (index) {
                    if (index < 8) {
                        headers.push($(this).text());
                    }
                });

                tableData.push(headers);

                // Extract data from each row
                $('#universityTable tbody tr').each(function () {
                    var rowData = [];
                    $(this).find('td').each(function (index) {
                        if (index < 8) {
                            rowData.push($(this).text().trim());
                        }
                    });
                    tableData.push(rowData);
                });

                // Create worksheet and download
                var ws = XLSX.utils.aoa_to_sheet(tableData);
                var wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "UniversityData");

                // Export to file
                XLSX.writeFile(wb, "UniversityData.xlsx");
            });

        </script>
    }

</body>
</html>

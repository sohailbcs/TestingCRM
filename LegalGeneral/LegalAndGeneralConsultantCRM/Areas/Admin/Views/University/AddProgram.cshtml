@section Scripts {

    <script>
        $(document).ready(function () {
            $('#brandTable').DataTable({
                "ajax": {
                    "url": "/Admin/University/GetProgramlData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "name", "name": "Name", "autoWidth": true },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            var editBtn = '<a href="/Admin/University/EditUniversity/' + row.universityId + '" class="btn btn-secondary"><i class="bi bi-pencil"></i>&nbsp; </a>';
                            var detailBtn = '<a href="/Admin/University/DetailUniversity/' + row.universityId + '" class="btn btn-info"><i class="bi bi-info-circle"></i>&nbsp; </a>';
                            var deleteBtn = '<a href="/Admin/University/DeleteUniversity/' + row.universityId + '" class="btn btn-danger"><i class="bi bi-trash"></i>&nbsp; </a>';

                            return editBtn + " " + detailBtn + " " + deleteBtn;
                        }
                    }

                ]
            });
            $('.dataTables_length').hide(); // Hide the 'Show entries' dropdown
        });


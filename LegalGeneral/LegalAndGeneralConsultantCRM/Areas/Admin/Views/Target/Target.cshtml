<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
</head>

@model IEnumerable<LegalAndGeneralConsultantCRM.ViewModels.TargetTaskViewModel>

<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="container-full">
        <section class="content">
            <!-- Content Header (Page header) -->

            <div class="row">

                <div class="col-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Task</h3>

                        </div>
                        <h2>@ViewData["Title"]</h2>

                        <div class="table-responsive">
                            <table id="tasksTable" class="display expandable-table" style="width:100%">
                                <thead class="thead-dark">
                                    <tr>

                                        <th>User</th>
                                        <th>Task Type</th>
                                        <th>Description</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Target</th>
                                        <th>Task By</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in Model)
                                    {
                                        <tr>
                                            <td>@task.UserFullName</td>
                                            <td>@task.TaskType</td>
                                            <td>@task.Description</td>
                                            <td>@task.StartDate.ToShortDateString()</td>
                                            <td>@task.EndDate.ToShortDateString()</td>
                                            <td>@task.targetquantity</td>
                                            <td>@task.createdby</td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>






                    </div>
                </div>
            </div>

        </section>

    </div>
</div>







<script>
    $(document).ready(function () {
        $('#tasksTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true
        });
        $('.dataTables_length').hide();
    });

</script>
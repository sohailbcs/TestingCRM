@model LegalAndGeneralConsultantCRM.Models.TeamMembers.TeamMember



<main id="main" class="main">


<section class="section">
    <div class="row">
        <div class="col-md-12">



            <div class="card" style="width: 90%">
                <div class="card-body">
                    <h5 class="card-title">Lead Form</h5>

                    <!-- Multi Columns Form -->
                        <form class="row g-3 g-3 needs-validation" novalidate method="post" asp-action="CreateEmployee" asp-controller="Employee" asp-area="Admin" enctype="multipart/form-data">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="inputName5" class="form-label">FirstName</label>
                                        <input asp-for="FirstName" type="text" class="form-control" required="Enter Name">
                                        <div class="invalid-feedback">Please enter your First Name.</div>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="inputName5" class="form-label">LastName</label>
                                        <input asp-for="LastName" type="text" class="form-control" required>
                                        <div class="invalid-feedback">Please enter your Last Name.</div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <label for="inputEmail5" class="form-label">Email </label>
                                <input asp-for="Email" type="email" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Email.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">PhoneNumber </label>
                                <input asp-for="PhoneNumber" type="number" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Phone Number.</div>
                            </div>

                            <div class="col-md-6">
                                <label for="inputPassword5" class="form-label">CompanyName</label>
                                <input asp-for="CompanyName" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Company.</div>
                            </div>
                            <div class="col-md-3">
                                <label for="inputCity" class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-control" id="inputCity">
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                            </div>
                            
                            <div class="col-md-6">
                                <label for="inputState" class="form-label">JobTitle</label>
                                <input asp-for="JobTitle" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Industry Name.</div>
                                <label for="inputState" class="form-label">MemeberType </label>
                                <select asp-for="TeamMemeberType" class="form-control">
                                    <option>Sale Team</option>
                                    <option>Team Leader</option>
                                    <option>Partner</option>
                                 </select>                  
                                <div class="invalid-feedback">Please enter your Industry Name.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputState" class="form-label">Address</label>
                                <textarea asp-for="Address" class="form-control" style="height: 108px" required></textarea>
                                <div class="invalid-feedback">Please enter your Source Details.</div>
                            </div>

                            <div class="col-md-6">
                                <label for="inputState" class="form-label">Department</label>
                                <input asp-for="Department" type="text" class="form-control" id="inputCity" required>
                                <div class="invalid-feedback">Please enter your Industry Name.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputState" class="form-label">Country</label>
                                <input asp-for="Country" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Address.</div>
                            </div>

                            <div class="col-md-6">
                                <label for="inputState" class="form-label">Notes</label>
                                <textarea asp-for="Notes" class="form-control" style="height: 178px" required></textarea>
                                <div class="invalid-feedback">Please enter your Source Details.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputState" class="form-label">State</label>
                                <input asp-for="State" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please enter your ZipCode.</div>

                                <label for="inputState" class="form-label">City</label>
                                <input asp-for="City" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Address.</div>

                                <label for="inputState" class="form-label">ZipCode</label>
                                <input asp-for="ZipCode" type="text" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Lead Owner.</div>
                            </div>
                            <div class="col-md-12">



                                <div class="float-end">
                                    <button type="submit" class="btn btn-primary  float-right">Submit</button>
                                </div>
                            </div>
                        </form><!-- End Multi Columns Form -->
                </div>
            </div>

        </div>


    </div>
</section> 
</main>
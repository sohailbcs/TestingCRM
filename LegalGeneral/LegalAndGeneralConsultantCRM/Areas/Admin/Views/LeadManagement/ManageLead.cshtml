@model LegalAndGeneralConsultantCRM.Models.LeadFollowUp.FollowUp

<style>
    .border1 {
        border: 2px solid #605e5e4c;
        padding: 10px;
        border-radius: 6px;
        margin: 20px 0px;
    }

    legend {
        background-color: lightgray;
        width: auto;
        padding: 5px 10px;
        border-radius: 4px;
        margin-top: -30px;
        font-size: medium;
        margin-left: 5%;
        font-weight: bold;
        font-family: arial;
    }

    .wor {
        margin-top: 20px;
    }
</style>
<br />

<main id="main" class="main ">
    <br />

    <section class="section" style="width: 100%;">
        <div class="row col-md-12" style="width: 100%;margin: auto;">
            <div class="col-md-8" style="margin: auto;">



                <div class="card" style="width: 100%">
                    <div class="card-body">


                        <form class="row wor g-3 g-3 needs-validation" novalidate asp-controller="LeadManagement" asp-action="ManageLead" method="post" asp-area="Admin">

                            <!-- Multi Columns Form -->
                            <div class="col-md-12 border1">
                                <legend>Follow Up</legend>

                                <input type="hidden" asp-for="LeadId" />

                                <br />


                                <div class="col-md-12">
                                    <label for="inputCity" class="form-label">Team Member</label>
                                    <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId" />

                                    <input type="text" class="form-control" value="@ViewBag.EmployeeName.FirstName" readonly>

                                </div>
                                <div class="col-md-12">
                                    <label for="inputCity" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-control">
                                        <option value="" disabled selected>--- Select Lead Status ---</option>

                                        <option>Hot Lead</option>
                                        <option>Dead Lead</option>
                                        <option>Cold Lead</option>
                                        <option>Future Lead</option>
                                        <option>Warm Lead</option>
                                        <option>Converted Lead</option>

                                    </select>
                                </div>
                                <div class="col-md-12">
                                    <label for="inputState" class="form-label"> Description</label>
                                    <textarea asp-for="Description" class="form-control" style="height: 100px" required></textarea>
                                    <div class="invalid-feedback">Please enter your Source Details.</div>
                                    <br>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="FollowUpDate" class="form-label">Follow-Up-Date </label>
                                        <input asp-for="FollowUpDate" type="date" class="form-control" required>
                                        <div class="invalid-feedback">Please enter your Company.</div>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="Reminder" class="form-label">Next-Follow-Up-Reminder</label>
                                        <input asp-for="Reminder" type="date" class="form-control" required>
                                        <div class="invalid-feedback">Please enter your Company.</div>
                                    </div>
                                </div>



                                <div class="col-md-12 mt-2">
                                    <div class="float-end">
                                        <button type="submit" class="btn btn-primary  float-right">Follow Up</button>
                                    </div>
                                </div>
                            </div>
                            <!-- End Multi Columns Form -->


                        </form>
                    </div>
                </div>

            </div>


        </div>
    </section>
</main>
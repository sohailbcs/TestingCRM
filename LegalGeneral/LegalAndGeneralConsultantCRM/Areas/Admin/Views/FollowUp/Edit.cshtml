@model LegalAndGeneralConsultantCRM.Models.LeadFollowUp.FollowUp


<main id="main" class="main">


    <section class="section" style="width: 100%;">
        <div class="row col-md-12" style="width: 100%;margin: auto;">
            <div class="col-md-8" style="margin: auto;">



                <div class="card" style="width: 100%">
                    <div class="card-body">
                        <h5 class="card-title" style="text-align: center;">Follow Up</h5>

                        <!-- Multi Columns Form -->
                        <form class="row g-3 g-3 needs-validation" novalidate asp-controller="Followup" asp-action="Edit" method="post" asp-area="Admin">

                            
                            <div class="col-md-12">
                                <label for="inputCity" class="form-label">Status</label>
                                <select asp-for="Status" class="form-control" id="inputCity">
                                    <option>Hot Lead</option>
                                    <option>Dead Lead</option>
                                    <option>Cold Lead</option>
                                    <option>Future Lead</option>
                                    <option>Warm Lead</option>
                                    <option>Converted Lead</option>

                                </select>
                            </div>

                            <div class="col-md-6">
                                <label for="inputPassword5" class="form-label">Follow-Date </label>
                                <input asp-for="FollowUpDate" type="date" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Company.</div>
                            </div>

                            <div class="col-md-6">
                                <label for="inputPassword5" class="form-label">Reminder</label>
                                <input asp-for="Reminder" type="date" class="form-control" required>
                                <div class="invalid-feedback">Please enter your Company.</div>
                            </div>

                            <div class="col-md-12">
                                <label for="inputState" class="form-label">Descreption</label>
                                <textarea asp-for="Description" class="form-control" style="height: 100px" required></textarea>
                                <div class="invalid-feedback">Please enter your Source Details.</div>
                                <br>
                            </div>
                            <div class="col-md-12">
                                <label for="FollowUpCompleted" class="form-label">FollowUp Process</label>

                                <select asp-for="FollowUpCompleted" class="form-control">
                                    <option>  FollowUp Continue   </option>
                                    <option>  FollowUp Completed </option>


                                </select>
                            </div>


                            <div class="col-md-12">
                                <div class="float-end">
                                    <button type="submit" class="btn btn-primary  float-right">Follow</button>
                                </div>
                            </div>
                        </form><!-- End Multi Columns Form -->
                    </div>
                </div>

            </div>


        </div>
    </section>




</main>
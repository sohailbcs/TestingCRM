<div class="modal fade" id="followUpModal" tabindex="-1" aria-labelledby="followUpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="followUpModalLabel">Visa Application</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="followUpForm" action="/Employee/Application/VisaApplication" method="post">
                    <input type="hidden" id="leadId" name="VisaApplications.LeadId">
                    <div class="form-group">
                        <label for="leadName">Name</label>
                        <input type="text" class="form-control" id="leadName" name="leadName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="visaStatus">Visa Status</label>
                        <select id="visaStatus" name="VisaApplications.VisaStatus" class="form-control">
                            <option value="">--- Select Visa Status (Accept, Reject) ---</option>
                            <option value="accept">Accepted</option>
                            <option value="reject">Rejected</option>
                            <option value="awaiting">Awaiting</option>
                        </select>
                        <span id="visaStatusError" class="text-danger" style="display:none;">Please select a visa status.</span>
                    </div>
                    <div class="form-group">
                        <label for="expiryDate">Visa Expiry Date</label>
                        <input type="date" id="expiryDate" class="form-control" name="VisaApplications.ExpiryDate">
                        <span id="expiryDateError" class="text-danger" style="display:none;">Please enter a visa expiry date.</span>
                    </div>
                    <div class="form-group">
                        <label for="passportNumber">Passport Number</label>
                        <input type="text" id="passportNumber" class="form-control" name="VisaApplications.PassportNumber">
                        <span id="passportNumberError" class="text-danger" style="display:none;">Please enter a passport number.</span>
                    </div>
                    <div class="form-group">
                        <label for="destinationCountry">Destination Country</label>
                        <input type="text" id="destinationCountry" class="form-control" name="VisaApplications.DestinationCountry">
                        <span id="destinationCountryError" class="text-danger" style="display:none;">Please enter a destination country.</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="saveFollowUp">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- /.content-wrapper -->
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#leadTable').DataTable({
                "ajax": {
                    "url": "/Employee/Application/GetVisaApplication",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "fullName", "autoWidth": true },
                    { "data": "email", "autoWidth": true },
                    { "data": "gender", "autoWidth": true },
                    { "data": "phoneNumber", "autoWidth": true },
                    { "data": "universityName", "autoWidth": true },
                    { "data": "courseName", "autoWidth": true },
                    {
                        "data": "visaStatus",

                        "autoWidth": true,
                        "render": function (data, type, row) {
                            if (data === "accept") {
                                return '<span class="badge badge-pill bg-success">Accepted</span>';
                            } else if (data === "reject") {
                                return '<span class="badge badge-pill bg-danger">  Rejected</span>';
                            } else if (data === "Cold Lead") {
                                return '<span class="badge badge-pill bg-dark">Cold Lead</span>';
                            } else if (data === "Future Lead") {
                                return '<span class="badge badge-pill bg-secondary">Future Lead</span>';
                            } else if (data === "awaiting") {
                                return '<span class="badge badge-pill bg-primary">Awaiting</span>';
                            } else if (data === "Warm Lead") {
                                return '<span class="badge badge-pill bg-info">Warm Lead</span>';
                            } else {
                                return '<span class="badge badge-pill bg-warning">Pending</span>';
                            }
                        }
                    },
                    {
                        "data": "leadId", // Ensure this matches the field name in JSON
                        "render": function (data, type, row) {
                            return '<a class="open-modal btn btn-link me-5" data-leadid="' + row.leadId + '" data-fullname="' + row.fullName + '" style="cursor: pointer;"> <i class="bi bi-file-earmark-check"></i></a> ' +

                                '<input type="hidden" class="leadId" value="' + row.leadId + '" />';
                        }
                    }





                ]
            });
            $(document).on('click', '.open-modal', function () {
                var leadId = $(this).data('leadid');
                var fullName = $(this).data('fullname');

                // Set leadId and fullName values in the modal form
                $('#followUpModal #leadId').val(leadId);
                $('#followUpModal #leadName').val(fullName);

                // AJAX call to fetch Visa Application details based on leadId
                $.ajax({
                    url: '/Employee/Application/GetVisaApplicationByLeadId', // Adjust URL based on your routing setup
                    type: 'GET',
                    data: { leadId: leadId },
                    success: function (response) {
                        if (response.success) {
                            // Populate the modal fields with the response data
                            $('#visaStatus').val(response.data.visaStatus);
                            $('#expiryDate').val(response.data.expiryDate ? response.data.expiryDate.split('T')[0] : '');
                            $('#passportNumber').val(response.data.passportNumber);
                            $('#destinationCountry').val(response.data.destinationCountry);
                        } else {
                            // Handle case where no data is found - clear fields to allow new entry
                            $('#visaStatus').val('');
                            $('#expiryDate').val('');
                            $('#passportNumber').val('');
                            $('#destinationCountry').val('');
                        }

                        // Show the modal
                        $('#followUpModal').modal('show');
                    },
                    error: function (error) {
                        console.log(error); // Log error for debugging
                        alert('Failed to fetch visa application details.'); // Show an alert for the error
                    }
                });
            });

            // Save follow-up button click event
            $('#saveFollowUp').on('click', function () {
                var isValid = true;

                // Validate Visa Status
                if ($('#visaStatus').val().trim() === '') {
                    $('#visaStatusError').show();
                    isValid = false;
                } else {
                    $('#visaStatusError').hide();
                }

               

                // Validate Passport Number
                if ($('#passportNumber').val().trim() === '') {
                    $('#passportNumberError').show();
                    isValid = false;
                } else {
                    $('#passportNumberError').hide();
                }

                // Validate Destination Country
                if ($('#destinationCountry').val().trim() === '') {
                    $('#destinationCountryError').show();
                    isValid = false;
                } else {
                    $('#destinationCountryError').hide();
                }

                if (isValid) {
                    var form = $('#followUpForm')[0];
                    var formData = new FormData(form);

                    $.ajax({
                        type: form.method,
                        url: form.action,
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (response) {
                            console.log(response);
                            if (response.success) {
                                alert(response.message);
                                $('#followUpModal').modal('hide');
                                $('#leadTable').DataTable().ajax.reload(); // Reload the data table
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function (error) {
                            console.log(error); // Log the error for debugging
                            alert('Failed to save follow-up');
                        }
                    });
                }
            });




        });



    </script>
}





<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="container-full">

        <!-- Main content -->
        <section class="content">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="d-flex align-items-center">
                    <div class="w-p100 d-md-flex align-items-center justify-content-between">
                        <h3 class="page-title">   </h3>
                        <div class="d-inline-block align-items-center">
                            <nav>
                                <ol class="breadcrumb">
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">

                <div class="col-12">

                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">University Programs Summary</h3>
                             
                        </div>



                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Search Filters</h5>
                                </div>
                                <div class="card-body">
                                    <form id="filterForm">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="firstNameFilter">University Name</label>
                                                    <input type="text" class="form-control" id="firstNameFilter" placeholder="University Name" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="sourceFilter">Country</label>
                                                    <input type="text" class="form-control" id="sourceFilter" placeholder="Country" />
                                                </div>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                            <div class="table-responsive">

                                <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
                                    <thead>
                                        <tr>
                                            <th style="background-color: #4e0973;color:white;">University Name</th>
                                            <th style="background-color: #4e0973;color:white;">Programs / Duration / Fees</th>
                                            <th style="background-color: #4e0973;color:white;">Country</th>
                                            <th style="background-color: #4e0973;color:white;">Website Url </th>
                                          </tr>
                                    </thead>
                                    <tbody>
                                       

                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>



    </div>




    @section Scripts {
        <script>
            $(document).ready(function () {
                var table = $('#example').DataTable({
                    "ajax": {
                        "url": "/Employee/MyLead/GetAllUniversityData",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "name", "autoWidth": true },
                        {
                            "data": "courses",
                            "render": function (data, type, row) {
                                var courses = '<ul>';
                                data.forEach(function (course) {
                                    courses += `
                                                <li>
                                                    <h5>${course.courseName}</h5>
                                                    <ul>
                                                                    <li>Duration: ${course.durationInYears}</li>
                                                        <li>Fees: $${course.tuitionFee}</li>
                                                    </ul>
                                                </li>
                                            `;
                                });
                                courses += '</ul>';
                                return courses;
                            }
                        },
                        { "data": "country", "autoWidth": true },
                        {
                            "data": "website",
                            "render": function (data, type, row) {
                                // Clean up any leading/trailing whitespace
                                let cleanedData = data.trim();

                                // Decode URL if necessary
                                let decodedUrl = decodeURIComponent(cleanedData);

                                // Ensure URL starts with 'http://' or 'https://', if not, prepend 'http://'
                                if (!decodedUrl.startsWith('http://') && !decodedUrl.startsWith('https://')) {
                                    decodedUrl = `http://${decodedUrl}`;
                                }

                                // Return link with proper URL and style
                                return `<a href="${decodedUrl}" target="_blank" style="color: blue; text-decoration: underline;">${decodedUrl}</a>`;
                            }
                        }



                    ]
                });

                // Filter by First Name
                $('#firstNameFilter').on('keyup', function () {
                    table.column(0).search(this.value).draw();
                });
                // Filter by Source
                $('#sourceFilter').on('keyup', function () {
                    table.column(1).search(this.value).draw();
                });

            });
        </script>
    }
